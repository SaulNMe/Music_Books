<div class="row">
	<form class="col s12">
		<div class="row">
			<div class="input-field s12">
				<p>Crate new sale</p>
			</div>
		</div>
		<div class="row">
			<div class="col s12">				
				<div class="col s7">				
			    	{{input type="text" value=firstName placeholder="Select a book"}}
				</div>
				<div class="col s3">				
			    	{{input type="number" value=firstName placeholder="Quantity"}}
				</div>
				<div class="col s2">
					<a href="#"{{action 'deleteItem' on='click'}}>
					<i class="material-icons">
						delete_forever
					</i>
					</a>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col s12">
				<div class="col s4">
					<a class="waves-effect waves-light btn" {{action 'createBook' on='click'}}>Add</a>
				</div>
				<div class="col s8">
				</div>
			</div>
		</div>
	</form>
</div>