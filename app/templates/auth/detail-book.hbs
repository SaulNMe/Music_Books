<div class="row">
    <form class="col s12">
	    <div class="row">
		    <div class="row">
	      		<div class="col s4">
	      			<img src={{model.musicBook.imgUrl}} class="responsive-img">
	      		</div>
		    </div>
	    </div>
	    <div class="row">
	      	<div class="input-field col s12">
		          <p>Title</p>	
		         {{input type="text" value=model.musicBook.title}}
	    	</div>
		</div>
		<div class="row">
	      	<div class="input-field col s12">
	      		<div class="row">
	      			<div class="col s12">		      				
		          		<p>Author</p>	
	      			</div>
	      		</div>
	      		<div class="row">		      			
		        	<div class="col s8">			        		
		        		{{input type="text" value=model.musicBook.author.fullName}}
		        	</div>
		        	<div class="col s4">
		        		<a class="waves-effect waves-light btn" {{action 'showAuthors' on='click'}}>Change author</a>			        		
		        	</div>
		        	{{#if isChangingAuthor}}
		        		<div class="col s12">
							<p>Select an author</p>
							{{#each model.authors as |author|}}
								<p width="auto">
									<a href="#" {{action 'selectAuthor' author on='click'}} > {{author.fullName}}</a>
								</p>
							{{/each}}
		        		</div>
					{{/if}}			        		
	      		</div>
	    	</div>
		</div>
		<div class="row">
	      	<div class="input-field col s12">
		          <p>Price</p>	
		         {{input type="text" value=model.musicBook.price}}
	    	</div>
		</div>
		<div class="row">
	      	<div class="input-field col s12">
		          <p>Image Url</p>	
		         {{input type="text" value=model.musicBook.imgUrl}}
	    	</div>
		</div>
		<div class="row">
			<div class="col s12">
				<div class="col s4">
					<a class="waves-effect waves-light btn" {{action 'buyBook' model on='click'}}>Add cart</a>
				</div>
				<div class="col s4">
					<a class="waves-effect waves-light btn" {{action 'saveBook' model.musicBook on='click'}}>Save</a>
				</div>
				<div class="col s4">
					<a class="waves-effect waves-light btn" {{action 'deleteBook' model on='click'}}>Delete</a>
				</div>
			</div>
		</div>
    </form>
 </div>
