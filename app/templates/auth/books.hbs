 {{#each model as |book|}}
	{{#link-to 'auth.detail-book' book.id}}
		<div class="col s12">
		    <div class="card-panel grey lighten-5 z-depth-1">
		      <div class="row valign-wrapper">
		        <div class="col s2">
		          <div class="avatar" style={{background-image book.imgUrl}}>
		          	
		          </div>
		        </div>
		        <div class="col s8">
		          <span class="black-text">
		            	{{book.title}}
		          </span>
		          <br>
		          <span class="grey-text">
		          		{{book.author.fullName}}
		          </span>
		        </div>
		        <div class="col s2">
		        	<i class="material-icons">
						more_vert
					</i>
		        </div>
		      </div>
		    </div>
		</div>
	{{/link-to}}
 {{/each}}

 <a class="btn-floating btn-large waves-effect waves-light fixed-action-btn" {{action 'addBook' on='click'}}><i class="material-icons">add</i></a>